<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="35dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/borderline">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="눈송뱃지 공구할 사람"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sell_status"
            android:layout_width="61dp"
            android:layout_height="18dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="127dp"
            android:background="@drawable/blue_badge"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/nowing" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#ffffff"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="함박눈송"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="공구 물품"
            android:textColor="#4d82cb"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_id" />

        <TextView
            android:id="@+id/tv_item_titlename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="뱃지"
            android:textColor="#5a6684"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="tv_item_pricename"
            app:layout_constraintStart_toEndOf="@+id/tv_item_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="예상 가격"
            android:textColor="#5a6684"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_title"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_period"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_item_pricename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="10000원"
            android:textColor="#5a6684"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_periodname"
            app:layout_constraintStart_toEndOf="@+id/tv_item_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_titlename"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_item_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="27dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="신청 기간"
            android:textColor="#5a6684"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_price"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tv_item_periodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="2021-11-23 \n~ 2021-12-25"
            android:textColor="#5a6684"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_item_period"
            app:layout_constraintTop_toBottomOf="@id/tv_item_pricename"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="79dp"
            android:layout_marginTop="91dp"
            android:layout_marginBottom="12dp"
            android:background="@color/white"
            android:src="@drawable/ic_like"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sell_status" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>