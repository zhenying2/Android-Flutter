<?xml version="1.0" encoding="utf-8"?>
<!--store-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/signupTopbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#F7EF8D">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F7EF8D"
            android:fontFamily="@font/mainfont"
            android:textColor="#2FA599"
            android:textSize="50dp"
            android:text="sign up"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroupUserInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radioBtnStore"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="store" />

            <RadioButton
                android:id="@+id/radioBtnCustomer"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="customer" />
        </RadioGroup>

        <!--phone number-->
        <EditText
            android:id="@+id/registerEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="email"
            android:background="@null"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"
            android:background="#2FA599"/>

        <!--nickname-->
        <EditText
            android:id="@+id/registerNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="nickname"
            android:background="@null"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"
            android:background="#2FA599"/>

        <!--password-->
        <EditText
            android:id="@+id/registerPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="password"
            android:background="@null"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"
            android:background="#2FA599"/>

        <ImageView
            android:id="@+id/iv_register_profile"
            android:padding="20dp"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:background="#F7EF8D"
            android:layout_gravity="center"
            android:src="@drawable/register_photo_camera"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="-60dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="profile photo"
            android:textColor="#000000"
            android:textSize="20dp" />

        <!--store address-->
        <EditText
            android:id="@+id/registerStoreAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="store address"
            android:background="@null"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />
        <View
            android:id="@+id/viewAddress"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"
            android:background="#2FA599"/>


        <!--store category-->
        <EditText
            android:id="@+id/registerStoreCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="store category"
            android:background="@null"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />
        <View
            android:id="@+id/viewCategory"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"
            android:background="#2FA599"/>

        <Button
            android:id="@+id/registerSignUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="#F7EF8D"
            android:text="Enroll"
            android:fontFamily="@font/mainfont"
            android:textColor="#2FA599" />

    </LinearLayout>

</LinearLayout>