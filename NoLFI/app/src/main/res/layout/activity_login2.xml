<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EF8D"
    tools:context=".LoginActivity">

    <TextView
        android:layout_marginTop="160dp"
        android:layout_marginBottom="160dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="50dp"
        android:textColor="#2FA599"
        android:text="NoLFI"/>

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/loginPhoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:hint="email"
            android:layout_marginBottom="5dp"
            android:background="@null"
            tools:layout_editor_absoluteY="423dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="25dp"
            android:background="#2FA599"/>

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginHorizontal="15dp"
            android:hint="password"
            android:layout_marginBottom="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="35dp"
            android:background="#2FA599"/>

        <Button
            android:id="@+id/loginLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="login"
            android:fontFamily="@font/mainfont"
            android:textColor="@color/black"
            android:backgroundTint="#2FA599"
            app:layout_constraintEnd_toEndOf="@+id/button2"
            tools:layout_editor_absoluteY="583dp" />

        <Button
            android:id="@+id/loginSignUpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sign up"
            android:fontFamily="@font/mainfont"
            android:textColor="@color/black"
            android:backgroundTint="#FABB00"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="647dp" />

    </LinearLayout>


</LinearLayout>