<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:stretchColumns="*"
    android:layout_marginLeft="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="32dp"
    android:id="@+id/table01"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:background="@color/white"
            android:layout_span="2"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="숨이 멈출 것 같은 롤러코스터의 매력"/>
    </TableRow>
    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp">
        <TextView android:background="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_span="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:textColor="@color/black"
            android:text="롯데월드 어드벤처의 대표 롤러코스터! 짜릿한 하강과
정신이 아득해지는 원형트랙에서 저세상 스릴을 느껴보세요!"/>
    </TableRow>
    <TableRow
        android:layout_marginBottom="2dp"
        android:background="@color/purple_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:text="운행 시간"/>
        <TextView
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:text="10:00 - 20:50"/>
    </TableRow>
    <TableRow
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/purple_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:text="탑승 인원"/>
        <TextView
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:text="28명"/>
    </TableRow>
    <TableRow
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/purple_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:text="탑승\n제한"/>
        <TextView
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:text="120cm 이하 / 200cm 이상\n13세 이하 / 64세 이상"/>
    </TableRow>
    <TableRow
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/purple_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:text="추가\n정보"/>
        <TextView
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:text="마감 시간과 입장 시간이 다를 수\n있으니 양지하여 주세요."/>
    </TableRow>
    <TableRow
        android:layout_marginTop="2dp"
        android:background="@color/purple_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:text="위치"/>
        <TextView
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:text="어드벤처 2층 후렌치레볼루션"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/map02"
            android:background="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_span="2"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/map02"/>
    </TableRow>
</TableLayout>